---
interface Props {
  title: string
  description: string
  image?: string
  href?: string
  icon?: string
}

const { title, description, image, href, icon } = Astro.props
const Tag = href ? 'a' : 'div'
---

<Tag
  href={href}
  class:list={[
    'group block bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300',
    href && 'cursor-pointer'
  ]}
>
  {image ? (
    <div class="aspect-[4/3] overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    </div>
  ) : icon ? (
    <div class="aspect-[4/3] bg-violet-50 flex items-center justify-center">
      <span class="text-6xl">{icon}</span>
    </div>
  ) : null}
  <div class="p-6">
    <h3 class="font-display text-xl font-semibold text-gray-900 group-hover:text-violet-700 transition-colors">
      {title}
    </h3>
    <p class="mt-2 text-gray-600 leading-relaxed">{description}</p>
    {href && (
      <span class="inline-flex items-center gap-1 mt-4 text-violet-600 font-medium text-sm group-hover:gap-2 transition-all">
        Descubrir m√°s
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
      </span>
    )}
  </div>
</Tag>
