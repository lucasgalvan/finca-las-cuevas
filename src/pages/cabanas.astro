---
import Layout from '../layouts/Layout.astro'
import PageHero from '../components/PageHero.astro'
---

<Layout title="Cabañas" description="6 cabañas de madera equipadas en Finca Las Cuevas. Pileta, quincho, parrillero y naturaleza.">

  <PageHero
    title="Cabañas"
    subtitle="Alojamiento"
    description="6 cabañas de madera rodeadas de naturaleza, con todo lo que necesitás para descansar."
    image="https://images.unsplash.com/photo-1587061949409-02df41d5e562?w=1400&q=80"
    imageAlt="Cabañas de madera"
  />

  <!-- Amenities -->
  <section class="py-24 md:py-32 px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="max-w-2xl">
        <span class="text-earth text-xs uppercase tracking-[0.25em] font-semibold">Comodidades</span>
        <h2 class="font-display text-3xl md:text-4xl text-charcoal font-semibold italic mt-3">
          Tu refugio en la naturaleza
        </h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mt-12">
        {[
          { label: 'Aire acondicionado' },
          { label: 'Pileta' },
          { label: 'Parrillero' },
          { label: 'Quincho' },
          { label: 'Camas y cuchetas' },
          { label: 'Cocina equipada' },
        ].map(item => (
          <div class="text-center p-6 bg-cream">
            <p class="text-charcoal text-sm font-medium">{item.label}</p>
          </div>
        ))}
      </div>

      <!-- Cabañas grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-12">
        {[
          'https://images.unsplash.com/photo-1587061949409-02df41d5e562?w=600&q=80',
          'https://images.unsplash.com/photo-1618767689160-da3fb810aad7?w=600&q=80',
          'https://images.unsplash.com/photo-1596178065887-1198b6148b2b?w=600&q=80',
          'https://images.unsplash.com/photo-1631049307264-da0ec9d70304?w=600&q=80',
          'https://images.unsplash.com/photo-1595576508898-0ad5c879a061?w=600&q=80',
          'https://images.unsplash.com/photo-1602002418816-5c0aeef426aa?w=600&q=80',
        ].map((img, i) => (
          <div class="group relative aspect-[4/3] overflow-hidden">
            <img
              src={img}
              alt={`Cabaña ${i + 1}`}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-charcoal/20 group-hover:bg-charcoal/30 transition-colors duration-500"></div>
            <div class="absolute bottom-0 left-0 p-5">
              <h3 class="font-display text-xl text-cream font-semibold italic">Cabaña {i + 1}</h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 px-6 lg:px-8 bg-cream text-center">
    <div class="max-w-2xl mx-auto">
      <h2 class="font-display text-2xl md:text-3xl text-charcoal font-semibold italic">¿Querés reservar una cabaña?</h2>
      <p class="text-charcoal-light/60 mt-3">Escribinos por WhatsApp y te contamos disponibilidad y precios.</p>
      <a
        href="https://wa.me/5493000000000?text=Hola!%20Quiero%20consultar%20disponibilidad%20de%20cabañas"
        target="_blank"
        rel="noopener"
        class="inline-block mt-8 bg-wine text-cream px-8 py-4 text-sm font-semibold uppercase tracking-wider hover:bg-wine-dark transition-colors duration-300"
      >
        Consultar disponibilidad
      </a>
    </div>
  </section>

</Layout>
